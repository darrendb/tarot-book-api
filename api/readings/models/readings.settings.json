{
  "kind": "collectionType",
  "collectionName": "readings",
  "info": {
    "name": "Readings",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "reading_slug": {
      "type": "string",
      "unique": true
    },
    "reading_date": {
      "type": "date",
      "required": true
    },
    "reading_name": {
      "type": "string",
      "required": true,
      "default": "(e.g. Daily 2021-08-16)"
    },
    "reading_author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "readings"
    },
    "reading_spread": {
      "model": "spreads"
    },
    "reading_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    }
  }
}
